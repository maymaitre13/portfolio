SMTP_SERVER=smtp.mail.yahoo.com
SMTP_PORT=587
SMTP_USERNAME=your_username@example.com
SMTP_PASSWORD=your_app_password
EMAIL_DELIVERY_MODE=mock
FLASK_DEBUG=1
SECRET_KEY=change-this-secret-key

# SQLite by default, can be overridden
DATABASE_URL=sqlite:///instance/portfolio.db
SESSION_COOKIE_SECURE=0

# Login protection (no IP restrictions)
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# Initial admin account (used by init-db)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-admin-password
ADMIN_IS_ADMIN=1

# Required: where contact messages are delivered
CONTACT_TO_ADDRESS=you@example.com

# Optional overrides
CONTACT_FROM_ADDRESS=
CONTACT_SUBJECT=Message from portfolio contact form

# Used by frontend/next.config.ts when running Next.js
BACKEND_URL=http://127.0.0.1:5000
